                                    <GridViewColumn Header="UID" DisplayMemberBinding ="{Binding UID}"/> 
                                    <GridViewColumn Header="Capacity" DisplayMemberBinding ="{Binding Capacity}"/> 
                                </GridView>
                            </ListView.View>
                        </ListView >
                    </Grid>
                </StackPanel>
