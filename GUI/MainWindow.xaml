<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" MinHeight="400" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--Visibile if one Athlet is markt as currentathlet-->
            <Button
                x:Name="btn_Dashboard"
                Grid.Column="1"
                Height="30"
                Width="100"
                Margin="10"
                Padding="5"
                Content="Dashboard" />

            <!--Visibile if one Athlet is markt as currentathlet-->
            <Button
                x:Name="btn_IBM_HostVolumeMap"
                Grid.Column="1"
                Height="30"
                Width="100"
                Margin="10"
                Padding="5"
                Content="Host Volume Info" />

            <!--Collection of all useable Workouts-->
            <Button
                x:Name="btn_IBM_DriveInfo"
                Grid.Column="2"
                Height="30"
                Width="100"
                Margin="10"
                Padding="5"
                Content="Drive Info" />

            <!--Collection of all useable Events-->
            <Button
                x:Name="btn_IBM_FCPortStats"
                Grid.Column="3"
                Height="30"
                Width="100"
                Margin="10"
                Padding="5"
                Content="FC-Port Info" />

            <!--If needed Admin/Trainer Logout-->
            <Button
                x:Name="btn_CloseAll"
                Grid.Column="7"
                Height="30"
                Width="100"
                Margin="10"
                Padding="5"
                Background="LightCoral"
                Content="Exit" />
        </Grid>
        <Grid Grid.Row="1" x:Name="User_Contr_Area" /> 
    </Grid>
</Window>